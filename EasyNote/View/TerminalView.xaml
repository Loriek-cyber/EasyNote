<UserControl x:Class="EasyNote.View.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit">
    
    <UserControl.Resources>
        <!-- Mode Button Style - Dark Theme -->
        <Style x:Key="ModeButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="8,6">
                            <TextBlock x:Name="text"
                                      Text="{TemplateBinding Content}"
                                      FontFamily="Consolas"
                                      FontSize="13pt"
                                      FontWeight="Bold"
                                      Foreground="#64748B"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="#38BDF8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ComboBox Style - Dark Theme -->
        <Style x:Key="CodeLanguageComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#111C3A"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="10pt"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#101A32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Editor -->
        <avalonEdit:TextEditor Grid.Column="0"
            x:Name="TextEditor"
            FontFamily="JetBrains Mono, Consolas, Courier New"
            FontSize="11pt"
            Background="#101A32"
            Foreground="#E2E8F0"
            ShowLineNumbers="False"
            Padding="16"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Hidden"
            KeyDown="TextEditor_OnKeyDown"
            />
        
        <!-- Mode Selector - Vertical on Right -->
        <StackPanel Grid.Column="1"
                    Orientation="Vertical"
                    Background="#0B1120"
                    VerticalAlignment="Top"
                    Margin="0,1,8,0">
            <RadioButton x:Name="MarkdownMode" 
                         Content="M" 
                         IsChecked="True"
                         Checked="OnModeChanged"
                         Style="{StaticResource ModeButtonStyle}"
                         ToolTip="Markdown"/>
            <RadioButton x:Name="LatexMode" 
                         Content="L" 
                         Checked="OnModeChanged"
                         Style="{StaticResource ModeButtonStyle}"
                         Margin="0,4,0,0"
                         ToolTip="LaTeX"/>
            <RadioButton x:Name="CodeMode" 
                         Content="K" 
                         Checked="OnModeChanged"
                         Style="{StaticResource ModeButtonStyle}"
                         Margin="0,4,0,0"
                         ToolTip="Code"/>
            <RadioButton x:Name="AImode"
                         Content="A"
                         Checked="OnModeChanged"
                         Style="{StaticResource ModeButtonStyle}"
                         Margin="0,4,0,0"
                         ></RadioButton>
            
            <!-- Language Selector (Visible only in Code mode) -->
            <ComboBox x:Name="LanguageSelector"
                      Visibility="Collapsed"
                      SelectionChanged="LanguageSelector_OnSelectionChanged"
                      Width="80"
                      Margin="0,12,0,0"
                      Style="{StaticResource CodeLanguageComboStyle}"/>
        </StackPanel>
        
    </Grid>
</UserControl>