<Window x:Class="EasyNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:EasyNote.View"
        Title="Note Terminal"
        Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <SolidColorBrush x:Key="WindowSurfaceBrush" Color="#0B1120" />
        <SolidColorBrush x:Key="ContentSurfaceBrush" Color="#101A32" />
        <SolidColorBrush x:Key="WindowBorderBrush" Color="#1E293B" />
        <SolidColorBrush x:Key="TitleBarBrush" Color="#111C3A" />
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E2E8F0" />
        <SolidColorBrush x:Key="MutedTextBrush" Color="#94A3B8" />
        <SolidColorBrush x:Key="AccentBrush" Color="#38BDF8" />

        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{StaticResource WindowBorderBrush}"
            Background="{StaticResource WindowSurfaceBrush}"
            SnapsToDevicePixels="True">
        <Grid>
            <!-- Custom title bar -->
            <DockPanel Background="{StaticResource TitleBarBrush}" Height="35" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="EasyNote"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           FontSize="13"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Content="🗕"
                            Click="Minimize_Click"
                            Style="{StaticResource TitleBarButtonStyle}"
                            ToolTip="Minimize"/>
                    <Button Content="🗖"
                            Click="Maximize_Click"
                            Style="{StaticResource TitleBarButtonStyle}"
                            ToolTip="Maximize"/>
                    <Button Content="✕"
                            Click="Close_Click"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Foreground="{StaticResource PrimaryTextBrush}"
                            ToolTip="Close"
                            MouseEnter="Close_MouseEnter"
                            MouseLeave="Close_MouseLeave"/>
                </StackPanel>
            </DockPanel>

            <!-- Main content -->
            <Grid Margin="0,35,0,0">
                <DockPanel>
                    <!-- Sidebar -->
                    <Border DockPanel.Dock="Left" Width="250" Background="{StaticResource TitleBarBrush}">
                        <view:SidebarView />
                    </Border>

                    <!-- Terminal -->
                    <DockPanel DockPanel.Dock="Bottom" Height="150" Background="{StaticResource ContentSurfaceBrush}">
                        <view:TerminalView />
                    </DockPanel>

                    <!-- Main workspace -->
                    <Grid Background="{StaticResource ContentSurfaceBrush}">
                        <view:Visualer/>
                    </Grid>
                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
