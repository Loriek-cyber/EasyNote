<Window x:Class="EasyNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasyNote"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource App.Background}">

    <!-- ============== THEME ============== -->
    <Window.Resources>
        <!-- Palette -->
        <Color x:Key="AppAccentColor">#5965F2</Color>
        <Color x:Key="AppBg">#0F1115</Color>
        <Color x:Key="CardBg">#151922</Color>
        <Color x:Key="SoftBorder">#1E2633</Color>
        <Color x:Key="SoftText">#C9D1D9</Color>
        <Color x:Key="MutedText">#8B95A5</Color>

        <SolidColorBrush x:Key="App.Background" Color="{StaticResource AppBg}"/>
        <SolidColorBrush x:Key="Card.Background" Color="{StaticResource CardBg}"/>
        <SolidColorBrush x:Key="Card.Border" Color="{StaticResource SoftBorder}"/>
        <SolidColorBrush x:Key="Text.Primary" Color="{StaticResource SoftText}"/>
        <SolidColorBrush x:Key="Text.Muted" Color="{StaticResource MutedText}"/>
        <SolidColorBrush x:Key="Accent.Brush" Color="{StaticResource AppAccentColor}"/>

        <!-- Common -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
        </Style>

        <!-- Button modern -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
            <Setter Property="Background" Value="#1B2230"/>
            <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#222B3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#283247"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle pill (per Anteprima) -->
        <Style TargetType="ToggleButton" x:Key="PillToggle">
            <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
            <Setter Property="Background" Value="#1B2230"/>
            <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <StackPanel Orientation="Horizontal" Margin="2,0">
                                <Ellipse x:Name="dot" Width="8" Height="8" VerticalAlignment="Center" Margin="4,0,8,0"
                                         Fill="#6B7280"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#212B40"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Accent.Brush}"/>
                                <Setter TargetName="dot" Property="Fill" Value="{StaticResource Accent.Brush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#222B3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Input editor -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0" />
                            <ScrollBar Grid.Row="0" Grid.Column="1" Orientation="Vertical"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            <ScrollBar Grid.Row="1" Grid.Column="0" Orientation="Horizontal"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Text.Primary}"/>
            <Setter Property="Background" Value="#121620"/>
            <Setter Property="BorderBrush" Value="{StaticResource Card.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="AcceptsTab" Value="True"/>
            <Setter Property="SpellCheck.IsEnabled" Value="False"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, Menlo, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="CaretBrush" Value="{StaticResource Accent.Brush}"/>
        </Style>
    </Window.Resources>

    <!-- ============== LAYOUT ============== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Top bar -->
            <RowDefinition Height="*"/>      <!-- Content -->
            <RowDefinition Height="Auto"/>   <!-- Status -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>    <!-- Editor / Preview area -->
            <ColumnDefinition Width="300"/>  <!-- Right menu -->
        </Grid.ColumnDefinitions>

        <!-- ===== Top Bar ===== -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="16,16,16,8">
            <Border Style="{StaticResource Card}" Padding="10" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" >
                        <Button Content="Nuovo"/>
                        <Button Content="Apri"/>
                        <Button Content="Salva"/>
                        <Separator Width="12" Opacity="0"/>
                        <Button Content="Compila"/>
                        <Button Content="Esporta PDF"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="EasyNote" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="{StaticResource Text.Muted}"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                        <ToggleButton x:Name="PreviewToggle" Style="{StaticResource PillToggle}"
                                      Content="Anteprima" ToolTip="Attiva/disattiva anteprima sullo stesso riquadro"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DockPanel>

        <!-- ===== Main Editor/Viewer (stesso riquadro) ===== -->
        <Border Grid.Row="1" Grid.Column="0" Margin="16,8,8,16" Style="{StaticResource Card}">
            <Grid>
                <!-- Sovrappongo editor e preview nello stesso spazio -->
                <Grid>
                    <!-- EDITOR -->
                    <TextBox x:Name="Editor"
                             Text="{Binding DocumentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="NoWrap"/>

                    <!-- PREVIEW -->
                    <!-- Placeholder: usa WebView2 o un controllo personalizzato per LaTeX/Markdown.
                         Qui metto un WebBrowser come segnaposto. -->
                    <Border x:Name="PreviewHost" Background="#10131B" BorderBrush="#00000000" BorderThickness="0"
                            Visibility="Collapsed" Opacity="0.98">
                        <Grid>
                            <TextBlock Text="Anteprima rendering"
                                       Foreground="{StaticResource Text.Muted}"
                                       HorizontalAlignment="Right" VerticalAlignment="Top"
                                       Margin="8" FontSize="12"/>
                            <!-- Sostituisci con WebView2:
                                 <wv2:WebView2 x:Name="PreviewWeb" />
                                 e aggiorna il contenuto in code-behind quando cambia DocumentText -->
                            <ScrollViewer>
                                <StackPanel Margin="16,8">
                                    <TextBlock Text="(Anteprima Markdown/LaTeX qui)" FontSize="18" Margin="0,0,0,8"/>
                                    <TextBlock TextWrapping="Wrap"
                                               Text="{Binding DocumentText}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Effetto vetro/ombra sul bordo -->
                <Border CornerRadius="14">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.35" BlurRadius="12" ShadowDepth="0"/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Border>

        <!-- ===== Right Menu (sidebar a destra) ===== -->
        <Border Grid.Row="1" Grid.Column="1" Margin="8,8,16,16" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Grid.Row="0" Margin="4,0,4,8">
                    <TextBlock Text="Documenti" FontSize="14" Foreground="{StaticResource Text.Muted}" Margin="2,2,2,8"/>
                    <TextBox x:Name="SearchBox" Template="Cerca…" />
                </StackPanel>

                <ListBox Grid.Row="1" x:Name="DocsList" BorderThickness="0" Background="#00000000"
                         Foreground="{StaticResource Text.Primary}" >
                    <!-- Item template semplice -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10" Padding="10" Margin="0,4"
                                    Background="#192131" BorderBrush="#20283A" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding UpdatedAt, StringFormat='Aggiornato: {0:dd/MM/yyyy HH:mm}'}"
                                               Foreground="{StaticResource Text.Muted}" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Impostazioni"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== Status Bar ===== -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="16,0,16,16" Style="{StaticResource Card}" Padding="8">
            <DockPanel>
                <TextBlock Text="UTF-8" DockPanel.Dock="Left" Margin="0,0,16,0" Foreground="{StaticResource Text.Muted}"/>
                <TextBlock Text="Ln 1, Col 1" DockPanel.Dock="Left" Foreground="{StaticResource Text.Muted}"/>
                <TextBlock Text="Pronto" DockPanel.Dock="Right" Foreground="{StaticResource Text.Muted}"/>
            </DockPanel>
        </Border>
    </Grid>

    <!-- ============== INTERACTIONS (senza code-behind) ============== -->
    <Window.Triggers>
        <!-- Toggle preview visibility solo con XAML using x:Reference -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Binding via ObjectAnimationUsingKeyFrames per intercettare cambi stato -->
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!-- MultiDataTriggers per sincronizzare Toggle con visibilità -->
    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <Binding ElementName="PreviewToggle" Path="IsChecked"/>
                    </DataTrigger.Binding>
                    <Setter TargetName="PreviewHost" Property="UIElement.Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Value="False">
                    <DataTrigger.Binding>
                        <Binding ElementName="PreviewToggle" Path="IsChecked"/>
                    </DataTrigger.Binding>
                    <Setter TargetName="PreviewHost" Property="UIElement.Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
</Window>
