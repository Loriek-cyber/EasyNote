<UserControl x:Class="EasyNote.View.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <!-- Info/Error banner -->
        <Border x:Name="ErrorLayer"
                Background="#CC1E1E1E"
                CornerRadius="6"
                BorderThickness="2"
                BorderBrush="Red"
                Padding="8"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Visibility="Collapsed">
            <TextBlock x:Name="ErrorMsg"
                       Foreground="White"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- The editor surface is injected at runtime -->
        <ContentControl x:Name="TerminalContent"
                        Grid.Row="1"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

        <!-- Status bar -->
        <DockPanel Grid.Row="2" Background="#252526" LastChildFill="True">
            <TextBlock x:Name="StatusLeft"
                       Foreground="#CCC"
                       Margin="8,0"
                       VerticalAlignment="Center"
                       Text="" />
            <TextBlock x:Name="StatusRight"
                       Foreground="#AAA"
                       Margin="8,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       DockPanel.Dock="Right"
                       Text="AvalonEdit • MIT" />
        </DockPanel>
    </Grid>
</UserControl>
