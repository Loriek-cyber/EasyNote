<Window x:Class="EasyNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:EasyNote.View"
        Title="Note Terminal"
        Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#444" Background="#222" SnapsToDevicePixels="True">
        <Grid>
            <!-- Custom title bar -->
            <DockPanel Background="#333" Height="35" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="EasyNote"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           Foreground="White"
                           FontSize="13"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Content="🗕"
                            Width="30"
                            Height="25"
                            Click="Minimize_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            ToolTip="Minimize"
                            Cursor="Hand"/>
                    <Button Content="🗖"
                            Width="30"
                            Height="25"
                            Click="Maximize_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            ToolTip="Maximize"
                            Cursor="Hand"/>
                    <Button Content="✕"
                            Width="30"
                            Height="25"
                            Click="Close_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            ToolTip="Close"
                            Cursor="Hand"
                            MouseEnter="Close_MouseEnter"
                            MouseLeave="Close_MouseLeave"/>
                </StackPanel>
            </DockPanel>

            <!-- Main content -->
            <Grid Margin="0,35,0,0">
                <DockPanel>
                    <!-- Sidebar -->
                    <Border DockPanel.Dock="Left" Width="250" Background="#252526">
                        <view:SidebarView />
                    </Border>

                    <!-- Terminal -->
                    <DockPanel DockPanel.Dock="Bottom" Height="150" Background="#1B1B1B">
                        <view:TerminalView />
                    </DockPanel>

                    <!-- Main workspace -->
                    <Grid Background="#1E1E1E">
                        
                    </Grid>
                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
