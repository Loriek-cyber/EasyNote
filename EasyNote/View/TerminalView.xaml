<UserControl x:Class="EasyNote.View.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <Grid>
        <Border x:Name="ErrorLayer"
                Background="#CC000000"
                CornerRadius="4"
                BorderThickness="2"
                BorderBrush="Red"
                Padding="8"
                Margin="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Visibility="Collapsed">
            <TextBlock x:Name="ErrorMsg"
                       Foreground="White"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Il code-behind imposta qui TextBox (Markdown) o EditControl (Code) -->
        <ContentControl x:Name="TerminalContent"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>